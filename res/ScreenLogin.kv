<LusiekButton@Button>
    font_size: 16
    size: 75,25
    #font_size: 32
    #size: 150,50
    color: 0, 0, 0, 1
    background_color: .88, .88, .88, 1
    size_hint: None, None

<LusiekNavLabel@Label>
    font_size: 11
    #font_size: 22
    color: 1, 1, 1, 1
    size: 100,25
    #size: 200,50
    background_color: .88, .88, .88, 1
    size_hint: .1, .05
    size_hint: None, None

<LusiekTextInput@TextInput>
    font_size: 11
    size:  175, 25
    #size: 350,50
    color: 1, 1, 1, 1
    size_hint: None, None
    background_color: .88, .88, .88, 1
    font_name: "klavika"

<ScreenLogin>:
    BoxLayout:
        orientation: "vertical"
        id: panel_login
        size_hint: .4, .5
        size_hint_max: .4, .5
        spacing: 15
        pos_hint: {"center_x": .5, "center_y": .5}

        BoxLayout:
            size: 100, 100
            #size: 200, 200
            size_hint: None, None
            pos_hint: {"center_x": .5, "center_y": .5}
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "assets/logo.png"

        BoxLayout:
            orientation: "vertical"
            id: "panel_login"
            spacing: 5
            pos_hint: {"center_x": .5, "center_y": .5}

            LusiekTextInput:
                id: in_login
                pos_hint: {"center_x": .5, "center_y": .5}
                color: 1, 1, 1, 1,
            LusiekTextInput:
                id: in_pass
                pos_hint: {"center_x": .5, "center_y": .5}
                password: True

        LusiekButton:
            id: button_login
            text: "log in"
            font_name: "klavika"
            pos_hint: {"center_x": .5,"center_y": .5}
            on_release:
                root.login()
            on_press:
                root.animate(self)

        LusiekNavLabel:
            id: navlabel_singup
            text: "no account? grab one!"
            font_name: "klavika"
            pos_hint: {"center_x": .5}

