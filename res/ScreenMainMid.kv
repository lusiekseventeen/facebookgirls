<LusiekNavButton@Button>
    size: 50,50
    size_hint: None, None

<LusiekDecideButton@Button>
    size: 75,75
    size_hint: None, None

<ScreenMainMid>:
    RelativeLayout:
        LusiekNavButton:
            id: btn_nav_to_settings
            pos: 5, root.height-self.height - 10
            on_press:
                root.manager.transition = SlideTransition()
                root.manager.transition.direction = 'right'
                root.manager.transition.duration = .5
                root.manager.current = 'screen_setting_left'
            Image:
                source: 'assets/settings.png'
                pos: 5, root.height-self.height - 10
                size: self.parent.width, self.parent.height
                allow_stretch: True

        LusiekNavButton:
            id: btn_nav_to_matches
            pos: root.width-self.width-5, root.height-self.height - 10
            on_press:
                root.manager.transition = SlideTransition()
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = .5
                root.manager.current = 'screen_matches_right'
            Image:
                source: 'assets/matches.png'
                pos: root.width-self.width-5, root.height-self.height - 10
                size: self.parent.width, self.parent.height
                allow_stretch: True

        BoxLayout:
            orientation: "vertical"
            size_hint: .4, .5
            size_hint_max: .4, .5
            spacing: 15
            pos_hint: {"center_x": .5, "center_y": .5}

            BoxLayout:
                id: image_holder_girls
                size: 300, 300
                size_hint: None, None
                pos_hint: {"center_x": .5, "center_y": .5}
                Image:
                    id: img
                    pos: self.pos
                    size: self.size
                    source:root.img_path

            BoxLayout:
                orientation: "horizontal"
                id: "decide_panel"
                size: 150, 100
                size_hint: None, None
                spacing: 5
                pos_hint: {"center_x": .5, "center_y": .5}

                LusiekDecideButton:
                    id: "btn_decide_no"
                    background_down: "assets/no_pressed.png"
                    background_normal: "assets/no.png"
                    on_press:
                        root.animate(self)
                    on_release:
                        root.loadPicture()


                LusiekDecideButton:
                    id: "btn_decide_yes"
                    background_down: "assets/yes_pressed.png"
                    background_normal: "assets/yes.png"
                    on_press:
                        root.animate(self)
                    on_press:
                        root.loadPicture()

