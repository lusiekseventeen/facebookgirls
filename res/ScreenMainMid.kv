<LusiekNavButton@Button>
    size: 50,50
    size_hint: None, None

<LusiekDecideButton@Button>
    size: 50,50
    size_hint: None, None

<ScreenMainMid>:
    RelativeLayout:
        LusiekNavButton:
            id: btn_nav_to_settings
            pos: 5, root.height-self.height - 10
            on_press:
                root.manager.transition = SlideTransition()
                root.manager.transition.direction = 'right'
                root.manager.transition.duration = .5
                root.manager.current = 'screen_setting_left'
            Image:
                source: 'assets/settings.png'
                pos: 5, root.height-self.height - 10
                size: self.parent.width, self.parent.height
                allow_stretch: True

        LusiekNavButton:
            id: btn_nav_to_matches
            pos: root.width-self.width-5, root.height-self.height - 10
            on_press:
                root.navRight()
            Image:
                source: 'assets/matches.png'
                pos: root.width-self.width-5, root.height-self.height - 10
                size: self.parent.width, self.parent.height
                allow_stretch: True

        BoxLayout:
            orientation: "vertical"
            size_hint: .4, .5
            size_hint_max: .4, .5
            spacing: 15
            pos_hint: {"center_x": .5, "center_y": .5}

            BoxLayout:
                id: image_holder_girls
                size: 300, 300
                size_hint: None, None
                pos_hint: {"center_x": .5, "center_y": .5}
                Image:
                    id: img
                    pos: self.pos
                    size: self.size
                    source: ""

            BoxLayout:
                orientation: "horizontal"
                id: "decide_panel"
                size: 150, 100
                size_hint: None, None
                spacing: 5
                pos_hint: {"center_x": .5, "center_y": .5}

                LusiekDecideButton:
                    on_press:
                        root.animate(self)
                    on_release:
                        root.no()
                    Image:
                        id: btn_decide_no
                        source: "assets/no.png"
                        pos: self.parent.pos
                        size: self.parent.width, self.parent.height
                        allow_stretch: True


                LusiekDecideButton:
                    on_press:
                        root.animate(self)
                    on_press:
                        root.yes()
                    Image:
                        id: btn_decide_yes
                        source: "assets/yes.png"
                        pos: self.parent.x, self.parent.y
                        size: self.parent.width, self.parent.height
                        allow_stretch: True

