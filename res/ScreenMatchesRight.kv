#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton
#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

<LusiekNavButton@Button>
    font_size: 32
    size: 100,100
    size_hint: None, None
<ScreenMatchesRight>:
    RelativeLayout:
        LusiekNavButton:
            id: "btn_nav_to_matches"
            pos: 0, root.height-self.height
            background_down: "assets/right_pressed.png"
            background_normal: "assets/right.png"
            on_press:
                root.manager.transition = SlideTransition()
                root.manager.transition.direction = 'right'
                root.manager.transition.duration = 1
                root.manager.current = 'screen_main_mid'
<Picture>:
    on_size: self.center = win.Window.center
    size: image.size
    size_hint: None, None
    pos: 200, 200

    Image:
        id: image
        source: root.source
        size: 400, 400 / self.image_ratio
        canvas.before:
            Color:
                rgba: 1,1,1,1
            BorderImage:
                source: 'assets/shadow32.png'
                border: (30,30,30,30)
                size:(self.width+72, self.height+72)
                pos: (-36,-36)



