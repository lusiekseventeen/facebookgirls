<ScreenSettingLeft>:
    RelativeLayout:
        LusiekNavButton:
            id: "btn_nav_to_matches"
            size: 50,50
            pos: root.width-self.width, root.height-self.height
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = .5
                root.manager.current = 'screen_main_mid'
            Image:
                source: 'assets/left.png'
                pos: root.width-self.width, root.height-self.height
                size: self.parent.width, self.parent.height
                allow_stretch: True
        Label:
            text: "Authors:\n Łukasz Szymczuk & Michał Gadowicz \n Politechnika Wrocławska - Metody wytwarzania oprogramowania 2017"